//colors
$color-primary = #ffde13
$color-bg = #f2f2f2
$color-text = #000
$color-text-hint = #aeaeae

//resolutions
$phone = 640px
$tablet = 768px
$notebook = 1024px
$desktop = 1600px

//params
$container-width = 1170px
$base-font = 16

//COMMON
.likearts-content .checkout-page
	position relative
	width 100%
	height auto
	padding 34px 0
	color $color-text
	@media (max-width: 1170px)
		padding 34px 15px

	&__title
		font-size 'calc(22 / %s * 1rem)' % ($base-font)
		line-height 1.64
		text-transform uppercase
		font-weight 900
		letter-spacing 2px
		margin-bottom 22px
		@media (max-width: $phone)
			font-size 'calc(16 / %s * 1rem)' % ($base-font)

		&--mb
			margin-bottom 24px

	&__steps
		position relative
		margin-top 29px
		margin-bottom 37px

	&__detail
		position relative

	&__btn-container
		margin-top 32px
		display flex
		flex-flow row wrap
		justify-content flex-end
		align-items center

	&__btn
		position relative
		font-size 'calc(16 / %s * 1rem)' % ($base-font)
		line-height 2.25
		padding 14px 59px
		box-shadow 0 1px 6px rgba(0,0,0,0.06), 0 1px 4px rgba(0,0,0,0.06)
		@media (max-width: $phone)
			width 100%
			padding 14px 20px

	&__btn-icon
		position relative
		top 4px

.likearts-content .checkout-page .steps
	position relative
	z-index 1
	width 100%
	display flex
	flex-flow row wrap
	justify-content flex-start
	align-items stretch
	@media (max-width: $tablet)
		flex-flow column wrap

	&__item
		position relative
		width auto
		height auto
		min-height 50px
		display flex
		align-items center
		background-color #fff
		color $color-text
		font-size 'calc(16 / %s * 1rem)' % ($base-font)
		line-height 1.5
		font-weight 700
		text-transform uppercase
		letter-spacing 1px
		padding 13px 25px
		@media (max-width: $notebook)
			font-size 'calc(13 / %s * 1rem)' % ($base-font)
		@media (max-width: $tablet)
			margin-bottom 1px

		&:before
			content ''
			display inline-block
			position absolute
			top 0
			left 0
			border 25px solid transparent
			border-left 12px solid #eaeaea
			transform translateX(1px)
			z-index 1
			@media (max-width: $tablet)
				display none
		&:after
			content ''
			display inline-block
			position absolute
			top 0
			right 0
			border 25px solid transparent
			border-left 12px solid #fff
			transform translateX(100%)
			z-index 2
			@media (max-width: $tablet)
				display none

	span
		margin-right 20px

	&__item.is-first
		background-color #282a2c
		color #fff
		&:before
			display none
		&:after
			border-left-color #282a2c
		.steps__item-icon
			color $color-primary

	&__item.is-second.active
		background-color $color-primary
		color $color-text
		&:after
			border-left-color $color-primary

	&__item-icon
		position absolute
		top 50%
		right 20px
		transform translateY(-50%)
		font-size 'calc(16 / %s * 1rem)' % ($base-font)
		color $color-text

.likearts-content .checkout-page .detail
	position relative
	display flex
	flex-flow row wrap
	justify-content space-between
	align-items flex-start

	&__form
		position relative
		flex-grow 1
		max-width calc(100% - 270px)
		min-height 800px
		order 0
		padding-right 100px
		@media (max-width: 1170px)
			padding-right 20px
		@media (max-width: $notebook)
			width 100%
			max-width 100%
			order 1
			padding-right 0

	&__info
		position relative
		top -80px
		width 270px
		height auto
		order 1
		@media (max-width: 1170px)
			top 0
		@media (max-width: $notebook)
			width 100%
			order 0

	&__info-order
		position relative
		margin-bottom 43px

	&__info-help
		position relative
		margin-bottom 43px

.likearts-content .checkout-page .order
	position relative
	width 100%
	height auto
	background-color #fff
	border-radius 0  0 12px 12px
	border-top 8px solid $color-primary
	box-shadow 3px 4px 9px rgba(0, 0, 0, 0.08)
	padding 18px 26px 28px 26px
	color $color-text

	&__title
		font-size 'calc(20 / %s * 1rem)' % ($base-font)
		font-weight 700
		line-height 1.2
		text-transform uppercase
		letter-spacing 2px
		margin-bottom 10px

	&__separator
		width 100%
		height 7px
		background-position left bottom
		background-repeat repeat-x
		margin 10px 0

	&__cost-item
		display flex
		justify-content space-between
		align-items center

	&__cost-name
		color #545454
		font-size 'calc(15 / %s * 1rem)' % ($base-font)
		font-weight 400
		line-height 2.13

	&__cost-price
		font-size 'calc(18 / %s * 1rem)' % ($base-font)
		font-weight 400
		line-height 1.06

	&__total
		display flex
		justify-content space-between
		align-items center
		margin-top 18px

	&__total-name
		font-size 'calc(15 / %s * 1rem)' % ($base-font)
		font-weight 700
		line-height 1.6
		text-transform uppercase
		letter-spacing 1px

	&__total-price
		font-size 'calc(22 / %s * 1rem)' % ($base-font)
		font-weight 600
		line-height 0.86

.likearts-content .checkout-page .help
	position relative
	color $color-text
	@media (max-width: $notebook)
		background-color #fff
		padding 18px 26px
		border-radius 12px
		box-shadow 3px 4px 9px rgba(0, 0, 0, 0.08)

	&__title
		font-size 'calc(20 / %s * 1rem)' % ($base-font)
		font-weight 700
		line-height 1.2
		text-transform uppercase
		letter-spacing 2px
		@media (max-width: $tablet)
			letter-spacing 1px
		@media (max-width: $phone)
			font-size 'calc(18 / %s * 1rem)' % ($base-font)

	&__separator
		width 100%
		height 3px
		background-color #dadada
		margin 17px 0 22px 0
		@media (max-width: $notebook)
			height 1px

	&__contacts
		margin-bottom 17px

	&__contacts-phone
		font-size 'calc(18 / %s * 1rem)' % ($base-font)
		font-weight 700
		line-height 1.2
		color $color-text
		text-decoration none
		@media (max-width: $phone)
			font-size 'calc(14 / %s * 1rem)' % ($base-font)

	&__contacts-city
		color #545454
		font-size 'calc(15 / %s * 1rem)' % ($base-font)
		font-weight 400
		line-height 1.2
		@media (max-width: $phone)
			font-size 'calc(14 / %s * 1rem)' % ($base-font)

	&__chat
		position relative
		display inline-flex
		flex-flow row wrap
		justify-content center
		align-items center
		min-height 54px
		background-color #fff
		border-radius 0 8px 8px
		border 3px solid $color-primary
		color $color-text
		padding 10px 35px 10px 28px
		margin-bottom 20px
		@media (max-width: $tablet)
			padding 10px
			width 100%

	&__chat-icon
		position relative
		top 0
		right 3px
		margin-right 6px

	&__chat-name
		font-size 'calc(18 / %s * 1rem)' % ($base-font)
		font-weight 600
		line-height 1.28

	&__sign
		color #545454
		font-size 'calc(16 / %s * 1rem)' % ($base-font)
		font-weight 400
		line-height 1.44
