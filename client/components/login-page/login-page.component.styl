//colors
$color-primary = #ffde13
$color-bg = #f2f2f2
$color-text = #000
$color-text-hint = #aeaeae

//resolutions
$phone = 640px
$tablet = 768px
$notebook = 1024px
$desktop = 1600px

//params
$container-width = 1170px
$base-font = 16

.likearts-content .login-page
	width 100%
	height auto
	min-height 724px
	padding 34px 0
	@media (max-width: 1170px)
		padding 34px 15px

	&__title
		color $color-text
		font-size 'calc(26 / %s * 1rem)' % ($base-font)
		line-height 1.38
		text-transform uppercase
		font-weight 900
		margin 23px 0 0 0
		letter-spacing 2px

	&__content
		display flex
		flex-flow row wrap
		justify-content space-between
		align-items stretch
		padding 40px 0 0 0

	&__form
		width calc(100% - 320px)
		@media (max-width: 1170px)
			width 100%

	&__social
		width 270px
		display flex
		flex-flow row wrap
		justify-content center
		align-items flex-start
		@media (max-width: 1170px)
			width 100%
			margin 30px 0 0 0