//colors
$color-primary = #ffde13
$color-bg = #f2f2f2
$color-text = #000
$color-text-hint = #aeaeae

//resolutions
$phone = 640px
$tablet = 768px
$notebook = 1024px
$desktop = 1600px

//params
$container-width = 1170px
$base-font = 16

.likearts-content .elf-button
	background-color $color-primary
	color $color-text
	border none
	border-radius 0 12px 12px 12px
	text-transform uppercase
	font-weight 700
	font-size calc(14 / 16 * 1em)
	line-height 2.57
	letter-spacing 1px
	padding 8px 38px
	cursor pointer
	transition all .2s ease-in-out
	&:hover
		background-color #FFEB3B
	&:focus
		transform scale(0.97)

