//colors
$color-primary = #ffde13
$color-bg = #f2f2f2
$color-text = #000
$color-text-hint = #aeaeae

//resolutions
$phone = 640px
$tablet = 768px
$notebook = 1024px
$desktop = 1600px

//params
$container-width = 1170px
$base-font = 16

.likearts-content .news-page
	width 100%
	padding 36px 0 0 0
	min-height 300px
	@media (max-width: $tablet)
		padding 0

	&__title
		margin 0 0 22px 0
		color $color-text
		font-size 'calc(28 / %s * 1rem)' %($base-font)
		font-weight 800
		line-height 1.29
		text-transform uppercase
		letter-spacing 3px

	.l-news-page-title
		padding 12px 0 0 0
		@media (max-width: 940px)
			padding 8px 0 0 0

.likearts-content .news-page .news-list
	&__item
		width 100%
		height auto
		display flex
		flex-flow row nowrap
		justify-content flex-start
		align-items flex-start
		background-color transparent
		margin-bottom 37px
		@media (max-width: $phone)
			flex-flow column wrap
			align-items center

	&__item-pic
		width 100%
		height 100%
		max-width 129px
		max-height 122px
		border-radius 0 12px 12px 12px
		object-fit cover

	&__item-anonce
		width 100%
		height auto
		min-height 200px
		padding 0 0 30px 0
		margin-left 30px
		margin-right 100px
		border-bottom 2px solid #e7e7e7
		@media (max-width: 1170px)
			margin-right 0
		@media (max-width: $phone)
			margin-left 0
			padding 20px 0 30px 0

	&__item-date
		color #949494
		font-size 'calc(12 / %s * 1rem)' %($base-font)
		font-weight 700
		line-height 2
		border-radius 0 3px 3px 3px
		border 2px solid #e6e6e6
		padding 3px 11px

	&__item-title
		color $color-text
		font-size 'calc(24 / %s * 1rem)' %($base-font)
		font-weight 700
		line-height 1
		margin 17px 0 10px 0
		@media (max-width: $phone)
			font-size 'calc(20 / %s * 1rem)' %($base-font)

	&__item-text
		color $color-text
		font-size 'calc(16 / %s * 1rem)' %($base-font)
		font-weight 300
		margin 0 0
		@media (max-width: $phone)
			font-size 'calc(15 / %s * 1rem)' %($base-font)

	&__item-control
		margin 19px 0 0 0

	&__item-btn
		padding 2px 13px 0 13px 
		font-size 'calc(12 / %s * 1rem)' %($base-font)
		line-height 3
		background-color #fff
		&:hover
			background-color $color-primary
