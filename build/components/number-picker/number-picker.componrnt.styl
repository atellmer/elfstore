@import 'nib'

//colors
$color-primary = #ffde13
$color-bg = #f2f2f2
$color-text = #000
$color-text-hint = #aeaeae

//resolutions
$phone = 640px
$tablet = 768px
$notebook = 1024px
$desktop = 1600px

//params
$container-width = 1170px
$base-font = 16

.likearts-content .number-picker
	position relative
	width 100%
	height 48px
	display flex
	flex-flow row nowrap
	justify-content flex-start
	align-items center
	padding-left 4px

	&__bg
		position absolute
		z-index 0
		top 0
		left 0
		right 0
		bottom 0
		background-color #fff
		border 1px solid #ccd1d7
		transition all .2s ease-in-out

	&__controls
		position absolute
		top 2px
		right 1px
		z-index 2

	&__controls-btn
		background-color red
		line-height 0
		cursor pointer
		background-color #fff
		user-select none

	&__controls-icon
		font-size 22px
		color #c2c2c2
		transition color .2s ease-in-out
		&:hover
			color #000

	&__input
		position relative
		z-index 1
		width calc(100% - 24px)
		height auto
		min-width 0
		min-height 0
		box-sizing border-box
		padding 4px 4px
		border 0
		font-size 'calc(17 / %s * 1rem)' %($base-font)
		text-align center
		&:focus
			outline none

		&:focus ~ .number-picker__bg
			border 1px solid #000

