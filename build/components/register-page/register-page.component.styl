//colors
$color-primary = #ffde13
$color-bg = #f2f2f2
$color-text = #000
$color-text-hint = #aeaeae

//resolutions
$phone = 640px
$tablet = 768px
$notebook = 1024px
$desktop = 1600px

//params
$container-width = 1170px
$base-font = 16

.likearts-content .register-page
	width 100%
	height auto
	padding 34px 0
	margin-bottom 65px
	@media (max-width: 1170px)
		padding 34px 15px
		margin-bottom 0

	&__title
		color $color-text
		font-size 'calc(26 / %s * 1rem)' % ($base-font)
		line-height 1.38
		text-transform uppercase
		font-weight 900
		margin 23px 0 0 0
		letter-spacing 2px

	&__content
		display flex
		flex-flow row wrap
		justify-content space-between
		align-items stretch
		padding 40px 0 0 0

	&__form
		width calc(100% - 320px)
		@media (max-width: 1170px)
			width 100%

		.elf-form
			min-height 670px

	&__btn
		padding 15px 48px
		@media (max-width: $phone)
			padding 15px 20px

	&__social
		width 270px
		display flex
		flex-flow row wrap
		justify-content center
		align-items flex-start
		@media (max-width: 1170px)
			width 100%
			margin 30px 0 0 0

	&__control
		display flex
		flex-flow row nowrap
		justify-content flex-start
		align-items center
		@media (max-width: 900px)
			flex-flow row wrap

	&__notice
		color #adadad
		font-size 'calc(14 / %s * 1rem)' % ($base-font)
		font-weight 300
		padding 20px 0 20px 25px
		@media (max-width: 900px)
			width 100%
			padding 20px 0

	&__links
		display flex
		flex-flow column wrap
		justify-content flex-start
		align-items flex-start
		margin-left 180px
		margin-top 30px
		border-top 2px solid #eeeeee 
		padding-top 30px
		@media (max-width: $phone)
			margin-left 0

	&__link
		color #2b2b2b
		font-size 'calc(15 / %s * 1rem)' % ($base-font)
		font-weight 400
		line-height 1.2
		text-decoration underline
		margin-bottom 5px
		transition color .2s ease-in-out
		@media (max-width: $phone)
			font-size 'calc(14 / %s * 1rem)' % ($base-font)
		&:hover
			color $color-text-hint
