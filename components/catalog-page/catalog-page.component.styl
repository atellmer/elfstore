@import 'nib'

//colors
$color-primary = #ffde13
$color-bg = #f2f2f2
$color-text = #000
$color-text-hint = #aeaeae

//resolutions
$phone = 640px
$tablet = 768px
$notebook = 1024px
$desktop = 1600px

//params
$container-width = 1170px
$base-font = 16

.likearts-content .catalog-page
	width 100%
	padding 36px 0 0 0
	@media (max-width: $tablet)
		padding 0

	&__slider
		width 100%
		margin-top 20px
		@media (max-width: 940px)
			display none

.likearts-content .catalog-page .showcase
	padding 39px 0 0 0
	@media (max-width: 940px)
		padding 8px 0 0 0

	&__title
		margin 0 0 28px 0
		color $color-text
		font-size 'calc(28 / %s * 1rem)' %($base-font)
		font-weight 800
		line-height 1.29
		text-transform uppercase
		letter-spacing 4px

	&__products
		padding 5px 0 10px 0
		overflow hidden
		@media (max-width: 1170px)
			padding 14px 0 10px 0

	&__pagination
		position relative
		padding 12px 0 10px 0
		display flex
		justify-content space-between
		align-items center

.likearts-content .catalog-page .sort
	display flex
	flex-flow row wrap
	justify-content flex-start
	align-items center
	&__btn
		line-height 2.5
		color #797979
		font-size 'calc(13 / %s * 1rem)' %($base-font)
		padding 0 14px
		letter-spacing 0
		background-color transparent
		border 2px solid #c1c1c1
		text-decoration underline
		margin 0 4px 4px 0
		@media (max-width: $phone)
			border-radius 12px
			line-height 2.2
			text-decoration none
		&:hover
			color $color-text
			background-color transparent
			border 2px solid #000

		&.is-active
			color $color-text
			background-color $color-primary
			border 2px solid transparent 

	a
		text-decoration none

.likearts-content .catalog-page .products
	position relative
	display flex
	flex-flow row wrap
	justify-content flex-start
	align-items stretch
	margin 0 -15px
	@media (max-width: 1170px)
		margin 0 -12px
	&__item
		display flex
		align-items flex-end
		position relative
		width calc(33.3333% - 30px)
		height auto
		min-height 325px
		margin 15px 15px
		border-radius 13px
		transition all .2s ease-in-out
		text-decoration none
		&:hover
			box-shadow: 0 3px 10px rgba(0,0,0,0.16), 0 3px 10px rgba(0,0,0,0.23);
			&:after
				background-color #000
		@media (max-width: 1170px)
			width calc(33.3333% - 24px)
			min-height 257px
			margin 12px 12px
		@media (max-width: 900px)
			width calc(50% - 30px)
		@media (max-width: $tablet)
			min-height 325px
		@media (max-width: $phone)
			width calc(100% - 30px)
		&:after
			content ''
			position absolute
			top 0
			left 0
			right 0
			bottom 0
			width 100%
			max-width 100%
			height 100%
			background-color transparent
			border-radius 13px
			opacity 0.4
			transition all .2s ease-in-out
		&--next
			justify-content center
			align-items center
			background-color $color-primary
			&:hover
				&:after
					background-color transparent

	&__item-pic
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		width 100%
		max-width 100%
		height 100%
		object-fit cover
		border-radius 13px
		z-index 0

	&__item-content
		position relative
		width 100%
		z-index 1
		text-align right
		padding 19px 19px 14px 19px
		@media (max-width: 1170px)
			padding 13px

	&__item-title
		position relative
		top 8px
		color #fff
		text-decoration underline
		font-size 'calc(15 / %s * 1rem)' %($base-font)
		line-height 2.4
		@media (max-width: 1170px)
			font-size 'calc(13 / %s * 1rem)' %($base-font)
			line-height 2.23

	&__item-price
		position relative
		top 4px
		font-size 'calc(18 / %s * 1rem)' %($base-font)
		line-height 1.06
		color $color-primary
		text-decoration none

	&__next-link
		position relative
		left -6px
		color $color-text
		text-decoration underline

	&__next-sign
		position relative
		font-size 'calc(24 / %s * 1rem)' %($base-font)
		line-height 1.17
		font-weight 700
		text-transform uppercase
		letter-spacing 2px
		&--light
			font-weight 300

	&__next-icon
		position relative
		top 2px
		left 5px

.likearts-content .catalog-page .l-repeat-btn
	@media (max-width: 924px)
		display none

.likearts-content .catalog-page .repeat-btn
	background-color transparent
	border 2px solid #d9d9d9
	padding 6px 10px
	line-height 1
