@import 'nib'

//colors
$color-primary = #ffde13
$color-bg = #f2f2f2
$color-text = #000
$color-text-hint = #aeaeae

//resolutions
$phone = 640px
$tablet = 768px
$notebook = 1024px
$desktop = 1600px

//params
$container-width = 1170px
$base-font = 16

.likearts-content .footer
	position relative
	width 100%
	height auto
	min-height 188px
	background-color #121416
	color #fff
	padding 20px 0

	&__menu
		position relative
		left -14px
		@media (max-width: 992px)
			left 0

	&__payments
		position relative
		top 13px
		width 775px
		height 52px
		background-color rgba(255, 255, 255, 0.03)
		background-image url('../../images/footer/payments.png')
		background-repeat no-repeat
		background-size cover
		background-position center
		@media (max-width: 810px)
			display none

	&__contacts
		position relative
		margin-top 25px
		left -1px

	&__copy
		margin-top 26px
		padding 0 0 0 53px
		@media (max-width: 1170px)
			padding 0
			text-align center

	.panel
		display flex
		flex-flow row wrap
		justify-content space-between
		align-items stretch
		@media (max-width: 992px)
			flex-flow column wrap
			justify-content space-between
			align-items center

	.contacts
		display flex
		flex-flow row nowrap
		justify-content center
		align-items stretch

		&__list
			display flex
			flex-flow column wrap
			justify-content center
			align-items flex-start
			@media (max-width: 1170px)
				align-items center

		&__icon
			margin-right 18px
			@media (max-width: 1170px)
				display none

		&__phone
			font-weight 700
			font-size 'calc(18 / %s * 1rem)' %($base-font)
			line-height 1.3
			color #a0a9b2
			margin-bottom -4px
			text-decoration none
			&:hover
				text-decoration underline
			@media (max-width: 1170px)
				margin-bottom 4px

		&__link
			display inline-block
			color #a0a9b2
			font-size 'calc(12 / %s * 1rem)' %($base-font)
			line-height 1.8
			transition color .2s ease-in-out
			&:hover
				color #fff
				text-decoration underline

	.copy
		opacity 0.2
		color #fff
		font-size 'calc(13 / %s * 1rem)' %($base-font)
		font-weight 300
		line-height 1.46
		text-transform uppercase