@import 'nib'

//colors
$color-primary = #ffde13
$color-bg = #f2f2f2
$color-text = #000
$color-text-hint = #aeaeae

//resolutions
$phone = 640px
$tablet = 768px
$notebook = 1024px
$desktop = 1600px

//params
$container-width = 1170px
$base-font = 16

.likearts-content .flex-grid
	display flex
	flex-flow row wrap
	justify-content flex-start
	align-items stretch
	@media (max-width: 970px)
		padding 0 30px
	@media (max-width: 768px)
		flex-flow column wrap

.likearts-content .flex-item
	&--aside
		width 268px
		@media (max-width: 1170px)
			width 254px
		@media (max-width: 768px)
			width 100%

	&--content
		flex-grow 1
		width 50%
		@media (max-width: 768px)
			width 100%