//colors
$color-primary = #ffde13
$color-bg = #f2f2f2
$color-text = #000
$color-text-hint = #aeaeae

//resolutions
$phone = 640px
$tablet = 768px
$notebook = 1024px
$desktop = 1600px

//params
$container-width = 1170px
$base-font = 16

.likearts-content .tags
	width 100%
	height auto
	border 2px solid #e6e6e6
	border-radius 0 13px 13px 13px
	padding 18px 25px

	a
		font-size 'calc(14 / %s * 1rem)' %($base-font)
		font-weight 400
		line-height 1.71
		color $color-text-hint
		text-decoration underline
		margin-right 1px
		transition color .2s ease-in-out
		&:hover
			color #757575
		&.is-active
			color $color-text